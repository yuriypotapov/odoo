<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- CSS includes (compiled) -->
    	<template id="styles_compiled" inherit_id="website.theme">
    		<xpath expr="." position="inside">
		        <link href="/website_cycle/static/src/css/styles.css" rel="stylesheet"/>
    		</xpath>
    	</template>

        <!-- JS assets includes -->
    	<template id="assets_frontend" inherit_id="website.assets_frontend">
    		<xpath expr="." position="inside">
                <script type="text/javascript" src="/website_cycle/static/src/js/lib/vendor/jquery.cycle.all.js"></script>
                <script type="text/javascript" src="/website_cycle/static/src/js/snippet.params.js"></script>
                <script type="text/javascript" src="/website_cycle/static/src/js/snippet.animation.js"></script>
    		</xpath>
    	</template>

        <!-- JS editor assets includes -->
        <template id="assets_editor" inherit_id="website.assets_editor">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_embed/static/src/js/embed.editor.js" groups="base.group_website_publisher"></script>
                <script type="text/javascript" src="/website_cycle/static/src/js/snippet.editor.js" groups="base.group_website_publisher"></script>
            </xpath>
        </template>

    </data>
</openerp>